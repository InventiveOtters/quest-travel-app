<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for all connections (required for local network IP addresses) -->
    <!-- Note: IP addresses cannot be specified in domain-config, so we enable cleartext globally -->
    <!-- This is safe for local network communication (192.168.x.x, 10.x.x.x, etc.) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

