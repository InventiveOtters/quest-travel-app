root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 120

[*.{kt,kts}]
ij_kotlin_allow_trailing_comma = true
ij_kotlin_line_break_after_modifiers = true
ktlint_standard_max_line_length = disabled
ktlint_standard_no-wildcard-imports = disabled

[*.md]
max_line_length = off

